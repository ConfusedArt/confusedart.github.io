---
import Icon from "./Icon.astro";
import { socialLinks } from "../util/consts";
interface Props {
  title: string;
  tagline?: string;
}

const { tagline, title } = Astro.props;
---

<header class:list={["hero stack gap-4 center"]}>
  <div class="stack gap-2">
    <h1 class="title">{title}</h1>
    {tagline && <p class="tagline">{tagline}</p>}
    <div class="socials flex gap-2">
      {
        socialLinks.map(({ href, icon }) => (
          <a href={href} class="social" target="_blank">
            <Icon icon={icon} color="var(--neon-pink)" size="24" />
          </a>
        ))
      }
    </div>
  </div>
  <slot />
</header>

<style>
  .hero {
    font-size: var(--text-lg);
    text-align: center;
  }

  .title,
  .tagline {
    color: var(--neon-pink);
  }

  .center {
    align-items: center;
  }

  .socials {
    display: flex;
  }

  .social {
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    width: 32px;
    color: var(--neon-pink);
  }
</style>
